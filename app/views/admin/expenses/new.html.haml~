<%= form_for [:admin, @expense] do |f| %>
    <%= f.label :incurred_date %>
    <%= f.text_field :incurred_date %>
    <%= f.label :amount %>
    <%= f.text_area :amount %>
    <%= f.label :category %>
    <%= f.text_area :category %>
    <%= f.label :remarks %>
    <%= f.text_area :remarks %>
    <%= f.submit "Record Expense" %>
<%- end -%>

