%h2 Details about #{@expense.amount}

%ul#details
  %li
    Incurred date:
    = @expense.incurred_date.strftime("%d %B, %Y")
  %li
    Amount:
    = humanized_money_with_symbol @expense.amount
  %li
    Category:
    = @expense.category
  %li
    Transacted by:
    = @expense.transacting_user_name
  %li
    Used sinking fund?:
    = @expense.contingency_funded

%h3 Remarks:

%p#description= @expense.remarks

%h3 Journals:

%table#journals
  %thead
    %tr
      %th Shareholder
      %th Share of Amount
  %tbody
    = render :partial => 'journal_for_display', :collection => @journals_for_display
%p


= link_to 'Back to debt list', admin_debts_path

